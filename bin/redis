if [ "$1" == "start" ]; then
	rm -f ./data/redis.*
	redis-server ./etc/redis.conf
	sleep 1
	redis-cli -s ./data/redis.sock info | grep uptime
elif [ "$1" == "status" ]; then
	redis-cli  -s ./data/redis.sock info | grep uptime
elif [ "$1" == "clean_restart" ]; then
	./bin/redis stop
	rm -rf ./data/redis.*
	./bin/redis start
else
	if [ -r ./data/redis.pid ]; then
		tail -n 0 -f ./data/redis.log & pid=$!
		kill $(cat ./data/redis.pid)
		sleep 1
		kill $pid
	else
		echo 'no pidfile present'
	fi
fi
